<!DOCTYPE html>
<html>
  <head>
    <title><%= pkg.name %></title>
    <link rel="stylesheet" type="text/css" href="<%= css %>" media="all" />
  </head>
  <body>
    <script type="text/javascript" src="<%= js %>"></script>
    <script src="https://apis.google.com/js/client.js?onload=handleClientLoad"></script>

    <header class="row">
      <h1 class="large-7 columns">Blog Rankings</h1>
      <div class="large-5 columns btn-wrapper">
        <button id="authorize-button" style="visibility: hidden">Authorize</button>
      </div>
    </header>

    <div id="content" class="row">
      <div ng-controller="ListCtrl">
        <form ng-submit="updatePage()">
          <div class="row">
            <div class="large-2 columns">
              <label>Start Date</label>
              <input type="text" ng-model="filter.startDate" datepicker/>
            </div>
            <div class="large-2 columns">
              <label>End Date</label>
              <input type="text" ng-model="filter.endDate" datepicker/>
            </div>
            <div class="large-8 columns">
              <label>&nbsp;</label>
              <input type="submit" value="Update" class="button small"/>
            </div>
          </div>
        </form>

        <h2>Most Visited</h2>
        <div class="row">
          <div class="large-6 columns">
            <table>
              <thead>
                <tr><th>Page</th><th>Visits</th><th>Author</th></tr>
              </thead>
              <tbody>
                <tr ng-repeat="post in postVisits">
                  <td>{{post.url}}</td>
                  <td>{{post.visits}}</td>
                  <td>
                  <select>
                    <option ng-repeat="author in authors()" value="{{author}}" ng-selected="post.author == author">{{author}}</option>
                  </select>
                  </td>
                </tr>
              </tbody>
            </table>
          </div>
          <div class="large-6 columns">
            <table>
              <thead>
                <tr><th>Page</th><th>Visits</th><th>Author</th></tr>
              </thead>
              <tbody>
                <tr ng-repeat="author in authors">
                  <td>{{author.name}}</td>
                  <td>{{author.visits}}</td>
                  <td>
                  <select>
                    <option ng-repeat="author in authors()" value="{{author}}" ng-selected="post.author == author">{{author}}</option>
                  </select>
                  </td>
                </tr>
              </tbody>
            </table>
          </div>
        </div>
        <h2>Most Engaging</h2>
        <div class="row">
          <div class="large-12 columns">
            <table>
              <thead>
                <tr><th>Page</th><th>Time on Site</th></tr>
              </thead>
              <tbody>
                <tr ng-repeat="post in postEngagements">
                  <td>{{post.url}}</td><td>{{post.timeOnSite}}</td>
                </tr>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
